<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#fff"
	android:orientation="vertical"
	android:id="@+id/bookshare_linearlayout">
	
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<ImageView
			android:id="@+id/bookshare_icon"
			android:src="@drawable/bookshare_text"
			android:layout_width="wrap_content"
			android:layout_marginTop="20dip"
			android:layout_gravity="center_horizontal"
			android:layout_height="wrap_content"/>
		<TextView
			android:id="@+id/bookshare_login_username_text"
			android:text="@string/login_dialog_username_label"
			android:textColor="#000"
			android:textSize="18dip"
			android:typeface="sans"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dip"
			android:layout_marginTop="40dip"/>
			
		<EditText
			android:id="@+id/bookshare_login_username_edit_text"
			android:layout_width="fill_parent"
			android:layout_marginLeft="20dip"
			android:layout_marginRight="20dip"
			android:textColor="#000"
			android:layout_height="50dip"
			android:inputType="text"
            android:contentDescription="@string/login_dialog_username_label"
            android:nextFocusRight="@+id/bookshare_login_password_edit_text"
            android:nextFocusDown="@+id/bookshare_login_password_edit_text"
            android:nextFocusLeft="@+id/btn_bookshare_bookshare_continue_without_login"
            android:nextFocusUp="@+id/btn_bookshare_bookshare_continue_without_login"
			android:imeOptions="actionNext"/>
			
		<TextView
			android:id="@+id/bookshare_login_password_text"
			android:text="@string/login_dialog_password_label"
			android:textColor="#000"
			android:textSize="18dip"
			android:typeface="sans"
			android:layout_marginLeft="20dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dip"/>
			
		<EditText
			android:id="@+id/bookshare_login_password_edit_text"
			android:password="true"
			android:layout_width="fill_parent"
			android:layout_marginLeft="20dip"
			android:layout_marginRight="20dip"
			android:textColor="#000"
			android:layout_height="50dip"
			android:focusable="true"
            android:contentDescription="@string/login_dialog_password_label"
            android:nextFocusRight="@+id/btn_bookshare_bookshare_webservice_login"
            android:nextFocusDown="@+id/btn_bookshare_bookshare_webservice_login"
            android:nextFocusLeft="@+id/bookshare_login_username_edit_text"
            android:nextFocusUp="@+id/bookshare_login_username_edit_text"
			android:imeOptions="actionSend"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		
			<Button 
				android:id="@+id/btn_bookshare_bookshare_webservice_login"
				android:text="@string/login_dialog_login_button"
				android:layout_weight="1"
				android:layout_marginTop="30dip"
				android:textSize="16dip"
				android:typeface="sans"
				android:textStyle="bold"
                android:nextFocusRight="@+id/btn_bookshare_bookshare_continue_without_login"
                android:nextFocusDown="@+id/btn_bookshare_bookshare_continue_without_login"
                android:nextFocusLeft="@+id/bookshare_login_password_edit_text"
                android:nextFocusUp="@+id/bookshare_login_password_edit_text"
				android:layout_width="130dip"
				android:layout_height="50dip"/>

	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
			<Button
				android:id="@+id/btn_bookshare_bookshare_continue_without_login"
				android:text="@string/login_dialog_skip_login_button"
				android:textSize="16dip"
				android:typeface="sans"
				android:textStyle="bold"
                android:nextFocusLeft="@+id/btn_bookshare_bookshare_webservice_login"
                android:nextFocusUp="@+id/btn_bookshare_bookshare_webservice_login"
                android:nextFocusDown="@+id/bookshare_login_username_edit_text"
                android:nextFocusRight="@+id/bookshare_login_username_edit_text"
				android:layout_marginTop="80dip"
				android:layout_weight="1"
				android:layout_width="match_parent"
				android:layout_height="50dip"/>
	</LinearLayout>

</LinearLayout>